CC=g++
LD=g++

CFLAGS=
LDFLAGS= -L/usr/local/lib/ -lallegro -lallegro_dialog -lallegro_primitives -lallegro_image -lallegro_font -lallegro_ttf
LDFLAGS1= ~/allegro-5.0/build/lib/  -liballegro.so -liballegro_dialog.so -liballegro_primitives.so -liballegro_image.so -liballegro_font.so -liballegro_ttf.so

SRCS=player.cpp projekt.cpp
TARGET=bin/zuzel

OBJS=$(addprefix obj/, $(addsuffix .o, $(SRCS)))

$(TARGET): $(OBJS) 
	$(LD) $(OBJS) -o $(TARGET) $(LDFLAGS1)

obj/%.cpp.o: src/%.cpp
	$(CC) -c $(CFLAGS) $< -o $@

clean:
	rm $(OBJS) $(TARGET)
